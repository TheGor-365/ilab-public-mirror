<% provide :page_title, "Edit #{@generation.title}" %>
<% currently_at 'iPhone Generations' %>

<div class="row">

  <div class="col-2">
    <%= render 'generations/edit_generation_partials/edit_generation_show_nav' %>
  </div>

  <div class="col-6 m-5">

    <div class="contents-block">

      <div class="row px-0 pt-4 pb-4 shadow bg-white mb-5 text-center header-nav">
        <div>
          <h1 class="display-6">
            Editing

            <span class="anchorjs-link text-muted" id='gadget'>
              <%= @generation.title %>
            </span>
            <br>

            <i class="fas fa-edit text-muted pt-4"></i>
          </h1>
        </div>
      </div>

      <%= render 'generations/edit_generation_partials/edit_generation_form', generation: @generation %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'generations/edit_generation_partials/edit_generation_info_card' %>
  </div>
</div>
