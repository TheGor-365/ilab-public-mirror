<% provide :page_title, 'Edit Apple Watch' %>
<% currently_at 'Apple Watches' %>

<div class="row">

  <div class="col-2">
    <%= render 'apple_watch_show_nav' %>
  </div>

  <div class="col-6 m-5">
    <div class="row p-5 shadow bg-white mb-5">
      <h1 class="display-6">
        Editing
        <span class="anchorjs-link text-muted" id='gadget'>
          <%= @apple_watch.title %>
        </span>
      </h1>
    </div>

    <%= render 'form', apple_watch: @apple_watch %>

    <div class="list-inline-item mt-3">
      <%= link_to 'Show', @apple_watch, class: 'text-decoration-none me-3' %>
      <%= link_to 'Back', apple_watches_path, class: 'text-decoration-none' %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'apple_watch_info_card' %>
  </div>
</div>
