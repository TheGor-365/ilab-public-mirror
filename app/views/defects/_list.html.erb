<% if defects.blank? %>
  <div class="card shadow-sm">
    <div class="card-body text-center text-muted py-5">
      Дефектов не найдено.
    </div>
  </div>
<% else %>
  <div class="row row-cols-1 row-cols-md-2 g-3">
    <% defects.each do |d| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <div class="d-flex align-items-start gap-3">
              <div class="flex-shrink-0">
                <% if d.respond_to?(:avatar) && d.avatar.present? %>
                  <%= image_tag(d.avatar.url, class: "rounded", width: 64, height: 64) %>
                <% else %>
                  <%= image_tag("default_product_avatar.jpg", class: "rounded", width: 64, height: 64) %>
                <% end %>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-1"><%= d.try(:title) || "Defect ##{d.id}" %></h6>
                <div class="small text-muted d-flex flex-wrap gap-2">
                  <span class="badge bg-light text-dark">Gen: <%= d.generation_id || "—" %></span>
                  <span class="badge bg-light text-dark">Imgs: <%= Array(d.images).size %></span>
                  <span class="badge bg-light text-dark">Vids: <%= Array(d.videos).size %></span>
                </div>
              </div>
            </div>

            <div class="mt-3 d-flex gap-2">
              <!-- Десктоп: правая панель (если на странице есть turbo-frame id="defect_details") -->
              <%= link_to "Подробнее",
                          defect_path(d),
                          data: { turbo_frame: "defect_details" },
                          class: "btn btn-sm btn-outline-primary d-none d-lg-inline-flex" %>

              <!-- Мобилка: сейчас обычный переход на show; когда добавим модалку+JS — откроется модалка -->
              <%= link_to "Открыть",
                          defect_path(d),
                          data: { defect_open: "1" },
                          class: "btn btn-sm btn-primary d-inline-flex d-lg-none" %>

              <%= link_to "Открыть страницу", d, class: "btn btn-sm btn-outline-dark ms-auto" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
