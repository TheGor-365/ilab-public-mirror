<div class="card h-100 shadow-sm">
  <div class="card-body d-flex flex-column">
    <div class="d-flex align-items-start gap-3">
      <div class="flex-grow-1">
        <h6 class="mb-1"><%= defect.try(:title) || "Defect ##{defect.id}" %></h6>
        <div class="small text-muted d-flex flex-wrap gap-2">
          <span class="badge bg-light text-dark">Gen: <%= defect.generation_id || "—" %></span>
          <span class="badge bg-light text-dark">Imgs: <%= Array(defect.images).size %></span>
          <span class="badge bg-light text-dark">Vids: <%= Array(defect.videos).size %></span>
        </div>
      </div>
    </div>

    <div class="mt-3 d-flex flex-wrap gap-2">
      <%= link_to "Детали",
                  defect_path(defect),
                  class: "btn btn-sm btn-outline-primary d-none d-md-inline-flex",
                  data: { turbo_frame: "defect_details" } %>

      <%= link_to "Детали",
                  defect_path(defect),
                  class: "btn btn-sm btn-outline-primary d-inline-flex d-md-none",
                  data: { defect_open: "1" } %>

      <%= link_to "Открыть", defect_path(defect), class: "btn btn-sm btn-light" %>
      <%= link_to "Редактировать", edit_defect_path(defect), class: "btn btn-sm btn-dark" %>
    </div>
  </div>
</div>
