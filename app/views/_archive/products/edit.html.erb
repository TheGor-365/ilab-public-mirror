<% provide :page_title, 'Edit Product' %>
<% currently_at 'Products' %>

<div class="row">

  <div class="col-2">
    <%= render 'product_show_nav' %>
  </div>

  <div class="col-6 m-5">
    <div class="row p-5 shadow bg-white mb-5">
      <h1 class="display-6">
        Editing Product
        <span class="text-muted">
          <%= @product.name %>
        </span>
      </h1>
    </div>

    <%= render 'form', product: @product %>

    <div class="list-inline-item mt-3">
      <%= link_to 'Show', @product, class: 'text-decoration-none' %>
      <%= link_to 'Back', products_path, class: 'text-decoration-none' %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'product_info_card' %>
  </div>
</div>
