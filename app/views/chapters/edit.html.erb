<% provide :page_title, 'Edit Chapter' %>
<% currently_at 'Chapters' %>

<div class="row">

  <div class="col-2">
    <%= render 'chapter_show_nav' %>
  </div>

  <div class="col-6 m-5">
    <div class="row p-5 shadow bg-white mb-5">
      <h1 class="display-6 mb-5">
        Editing Chapter
      </h1>
    </div>

    <%= render 'form', chapter: @chapter %>

    <div class="list-inline-item mt-3">
      <%= link_to 'Show', @chapter, class: 'text-decoration-none me-3' %>
      <%= link_to 'Back', chapters_path, class: 'text-decoration-none' %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'chapter_info_card' %>
  </div>

</div>
