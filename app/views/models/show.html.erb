<% provide :page_title, @model.title %>
<% currently_at 'iPhone Models' %>

<div class="row">

  <div class="col-2">
    <%= render 'model_show_nav' %>
  </div>

  <div class="col-6 m-5">
    <div class="row p-5 shadow bg-white mb-5">
      <span id="gadget" class="anchorjs-link display-1"><%= @model.title %>
        <span class="text-muted display-1">
          <strong>show room</strong>
        </span>
      </span>
    </div>

    <div class="row p-5 shadow bg-white mb-5">
        <span class="display-6"><%= @model.generation_id %>
          <span class="text-muted display-6">
            generation id
          </span>
        </span>
    </div>

    <div class="row p-5 shadow bg-white mb-5">
      <span class="display-6"><%= @model.phone_id %>
        <span class="text-muted display-6">
          phone id
        </span>
      </span>
    </div>

    <div class="row p-5 shadow bg-white">
      <span id="photos" class="anchorjs-link display-6 mb-5"><%= @model.title %>
        <span class="text-muted display-6">
          photos
        </span>
      </span>
      <br>

      <% @model.images.each do |image| %>
        <div class="col text-center mb-5">
          <%= image_tag(image.url, width: '300', class: 'rounded img-thumbnail shadow') %>
        </div>
      <% end %>
    </div>

    <div class="row mt-5 p-5 mb-4 bg-white shadow">
      <span id="videos" class="anchorjs-link display-6 mb-3"><%= @model.title %>
        <span class="text-muted display-6">
          videos
        </span>
      </span>

      <% @model.videos.each do |video| %>
        <small class="text-muted mb-5"><%= video.identifier %></small>
      <% end %>

      <div class="col">
        <%= video_tag(@model.videos, width: '640', height: '380', controls: true, class: 'rounded card p-1 shadow mx-auto mb-5') if @model.videos.present? %>
      </div>
    </div>

    <div class="list-inline-item mt-3">
      <%= link_to 'Edit', edit_model_path(@model), class: 'text-decoration-none me-3' %>
      <%= link_to 'Back', models_path, class: 'text-decoration-none' %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'model_info_card' %>
  </div>
</div>
