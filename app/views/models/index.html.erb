<% provide :page_title, 'iPhone Models' %>
<% currently_at 'iPhone Models' %>

<div class="container pt-5 pb-5">

  <div class="bg-white shadow p-4 col-12">

    <h4 class="display-3 mb-5">Models</h4>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>Generation id</th>
          <th>Phone id</th>
          <th>Title</th>
          <th>Images</th>
          <th>Videos</th>
          <th colspan="3">Controls</th>
        </tr>
      </thead>

      <tbody>
        <% @models.each do |model| %>
          <tr>
            <td class="align-middle"><%= model.id %></td>
            <td class="align-middle"><%= model.generation_id %></td>
            <td class="align-middle"><%= model.phone_id %></td>
            <td class="align-middle"><%= model.title %></td>

            <td class="align-middle">
              <% model.images.each do |image| %>
                <%= image_tag(image.url, width: '30', class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle">
              <% model.videos.each do |video| %>
                <%= video_tag(video.url, width: '40', height: '40', controls: true, class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle"><%= link_to 'Show', model, class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Edit', edit_model_path(model), class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <%= link_to 'New Model', new_model_path, class: 'text-decoration-none' %>
  </div>
</div>
