<div class="card h-100 shadow-sm">
  <div class="card-body d-flex flex-column">
    <div class="d-flex align-items-start gap-3">
      <div class="flex-shrink-0">
        <% if spare_part.avatar.present? %>
          <%= image_tag(spare_part.avatar.url, class: "rounded", width: 56, height: 56) %>
        <% else %>
          <%= image_tag("default_product_avatar.jpg", class: "rounded", width: 56, height: 56) %>
        <% end %>
      </div>
      <div class="flex-grow-1">
        <h6 class="mb-1"><%= spare_part.try(:name) || spare_part.try(:title) || "Spare Part ##{spare_part.id}" %></h6>
        <div class="small text-muted d-flex flex-wrap gap-2">
          <span class="badge bg-light text-dark">Gen: <%= spare_part.generation_id || "—" %></span>
          <% if spare_part.manufacturer.present? %>
            <span class="badge bg-light text-dark">Maker: <%= spare_part.manufacturer %></span>
          <% end %>
        </div>
      </div>
    </div>

    <div class="mt-3 d-flex flex-wrap gap-2">
      <%= link_to "Детали",
                  spare_part_path(spare_part),
                  class: "btn btn-sm btn-outline-primary d-none d-md-inline-flex",
                  data: { turbo_frame: "spare_part_details" } %>

      <%= link_to "Детали",
                  spare_part_path(spare_part),
                  class: "btn btn-sm btn-outline-primary d-inline-flex d-md-none",
                  data: { "spare-part-open": "1" } %>

      <%= link_to "Открыть", spare_part_path(spare_part), class: "btn btn-sm btn-light" %>
      <%= link_to "Редактировать", edit_spare_part_path(spare_part), class: "btn btn-sm btn-dark" %>
    </div>
  </div>
</div>
