<% provide :page_title, 'Posts' %>
<% currently_at 'Posts' %>

<div class="container pt-5 pb-5">

  <div class="bg-white shadow p-4 col-12">

    <h4 class="display-3 mb-5">
      Posts
    </h4>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>Title</th>
          <th>Content</th>
          <th>Views</th>
          <th>Images</th>
          <th>Videos</th>
          <th colspan="3">Controls</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td class="align-middle"><%= post.id %></td>
            <td class="align-middle"><%= post.title %></td>
            <td class="align-middle"><%= post.body %></td>
            <td class="align-middle"><%= post.views %></td>

            <td class="align-middle">
              <% post.images.each do |image| %>
                <%= image_tag(image.url, width: '30', class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle">
              <% post.videos.each do |video| %>
                <%= video_tag(video.url, width: '40', height: '40', controls: true, class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle"><%= link_to 'Show', post, class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Edit', edit_post_path(post), class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Post', new_post_path, class: 'text-decoration-none' %>
  </div>
</div>
