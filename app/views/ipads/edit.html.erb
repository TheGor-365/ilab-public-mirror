<% provide :page_title, 'Edit iPad' %>
<% currently_at 'iPads' %>

<div class="row">

  <div class="col-2">
    <%= render 'ipad_show_nav' %>
  </div>

  <div class="col-6 m-5">
    <div class="row p-5 shadow bg-white mb-5">
      <h1 class="display-6">
        Editing
        <span class="anchorjs-link text-muted" id='gadget'>
          <%= @ipad.title %>
        </span>
      </h1>
    </div>

    <%= render 'form', ipad: @ipad %>

    <div class="list-inline-item mt-3">
      <%= link_to 'Show', @ipad, class: 'text-decoration-none me-3' %>
      <%= link_to 'Back', ipads_path, class: 'text-decoration-none' %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'ipad_info_card' %>
  </div>
</div>
