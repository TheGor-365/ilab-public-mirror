<% provide :page_title, 'iPads' %>
<% currently_at 'iPads' %>

<div class="container pt-5 pb-5">
  <div class="bg-white shadow p-4 col-12">

    <h4 class="display-3 mb-5">iPads</h4>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>Title</th>
          <th>Diagonal</th>
          <th>Model</th>
          <th>Version</th>
          <th>Series</th>
          <th>Production period</th>
          <th>Full title</th>
          <th>Overview</th>
          <th>Images</th>
          <th>Videos</th>
          <th colspan="3">Controls</th>
        </tr>
      </thead>

      <tbody>
        <% @ipads.each do |ipad| %>
          <tr>
            <td class="align-middle"><%= ipad.id %></td>

            <td class="align-middle"><%= ipad.title %></td>
            <td class="align-middle"><%= ipad.diagonal %></td>
            <td class="align-middle"><%= ipad.model %></td>
            <td class="align-middle"><%= ipad.version %></td>
            <td class="align-middle"><%= ipad.series %></td>
            <td class="align-middle"><%= ipad.production_period %></td>
            <td class="align-middle"><%= ipad.full_title %></td>
            <td class="align-middle"><%= ipad.overview %></td>

            <td class="align-middle">
              <% ipad.images.each do |image| %>
                <%= image_tag(image.url, width: '30', class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle">
              <% ipad.videos.each do |video| %>
                <%= video_tag(video.url, width: '40', height: '40', controls: true, class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle"><%= link_to 'Show', ipad, class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Edit', edit_ipad_path(ipad), class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Destroy', ipad, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <%= link_to 'New Ipad', new_ipad_path, class: 'text-decoration-none' %>
  </div>
</div>
