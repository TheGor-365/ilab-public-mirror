<% if mods.blank? %>
  <div class="card shadow-sm">
    <div class="card-body text-center text-muted py-5">
      Модулей не найдено.
    </div>
  </div>
<% else %>
  <div class="row row-cols-1 row-cols-md-2 g-3">
    <% mods.each do |m| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <div class="d-flex align-items-start gap-3">
              <div class="flex-shrink-0">
                <% if m.avatar.present? %>
                  <%= image_tag(m.avatar.url, class: "rounded", width: 64, height: 64) %>
                <% else %>
                  <%= image_tag("default_product_avatar.jpg", class: "rounded", width: 64, height: 64) %>
                <% end %>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-1"><%= m.try(:title) || m.try(:name) || "Mod ##{m.id}" %></h6>
                <div class="small text-muted d-flex flex-wrap gap-2">
                  <span class="badge bg-light text-dark">Gen: <%= m.generation_id || "—" %></span>
                  <% if m.manufacturers.present? %>
                    <span class="badge bg-light text-dark">
                      Makers: <%= Array(m.manufacturers).first(2).join(", ") %><%= m.manufacturers.size > 2 ? "…" : "" %>
                    </span>
                  <% end %>
                  <span class="badge bg-light text-dark">Imgs: <%= Array(m.images).size %></span>
                </div>
              </div>
            </div>

            <div class="mt-3 d-flex gap-2">
              <!-- Десктоп: правая панель (если есть turbo-frame id="mod_details") -->
              <%= link_to "Подробнее",
                          mod_path(m),
                          data: { turbo_frame: "mod_details" },
                          class: "btn btn-sm btn-outline-primary d-none d-lg-inline-flex" %>

              <!-- Мобилка: пока обычная навигация; когда появится модалка+JS — будет открываться модалка -->
              <%= link_to "Открыть",
                          mod_path(m),
                          data: { mod_open: "1" },
                          class: "btn btn-sm btn-primary d-inline-flex d-lg-none" %>

              <%= link_to "Открыть страницу", m, class: "btn btn-sm btn-outline-dark ms-auto" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
