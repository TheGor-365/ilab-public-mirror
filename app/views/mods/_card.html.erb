<div class="card h-100 shadow-sm">
  <div class="card-body d-flex flex-column">
    <div class="d-flex align-items-start gap-3">
      <div class="flex-shrink-0">
        <% if mod.avatar.present? %>
          <%= image_tag(mod.avatar.url, class: "rounded", width: 56, height: 56) %>
        <% else %>
          <%= image_tag("default_product_avatar.jpg", class: "rounded", width: 56, height: 56) %>
        <% end %>
      </div>
      <div class="flex-grow-1">
        <h6 class="mb-1"><%= mod.try(:title) || mod.try(:name) || "Mod ##{mod.id}" %></h6>
        <div class="small text-muted d-flex flex-wrap gap-2">
          <span class="badge bg-light text-dark">Gen: <%= mod.generation_id || "—" %></span>
          <% if mod.manufacturers.present? %>
            <span class="badge bg-light text-dark">Makers: <%= Array(mod.manufacturers).first(2).join(", ") %><%= mod.manufacturers.size > 2 ? "…" : "" %></span>
          <% end %>
        </div>
      </div>
    </div>

    <div class="mt-3 d-flex flex-wrap gap-2">
      <%= link_to "Детали",
                  mod_path(mod),
                  class: "btn btn-sm btn-outline-primary d-none d-md-inline-flex",
                  data: { turbo_frame: "mod_details" } %>

      <%= link_to "Детали",
                  mod_path(mod),
                  class: "btn btn-sm btn-outline-primary d-inline-flex d-md-none",
                  data: { mod_open: "1" } %>

      <%= link_to "Открыть", mod_path(mod), class: "btn btn-sm btn-light" %>
      <%= link_to "Редактировать", edit_mod_path(mod), class: "btn btn-sm btn-dark" %>
    </div>
  </div>
</div>
