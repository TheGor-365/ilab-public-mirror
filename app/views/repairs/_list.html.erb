<% if repairs.blank? %>
  <div class="card shadow-sm">
    <div class="card-body text-center text-muted py-5">
      Ремонтов не найдено.
    </div>
  </div>
<% else %>
  <div class="row row-cols-1 row-cols-md-2 g-3">
    <% repairs.each do |r| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <div class="d-flex align-items-start gap-3">
              <div class="flex-shrink-0">
                <% if r.avatar.present? %>
                  <%= image_tag(r.avatar.url, class: "rounded", width: 64, height: 64) %>
                <% else %>
                  <%= image_tag("default_product_avatar.jpg", class: "rounded", width: 64, height: 64) %>
                <% end %>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-1"><%= r.try(:title) || "Repair ##{r.id}" %></h6>
                <div class="small text-muted d-flex flex-wrap gap-2">
                  <span class="badge bg-light text-dark">Gen: <%= r.generation_id || "—" %></span>
                  <% if r.price.present? %>
                    <span class="badge bg-success-subtle text-success">Цена: <%= r.price %></span>
                  <% end %>
                  <span class="badge bg-light text-dark">Imgs: <%= Array(r.images).size %></span>
                  <span class="badge bg-light text-dark">Vids: <%= Array(r.videos).size %></span>
                </div>
              </div>
            </div>

            <div class="mt-3 d-flex gap-2">
              <%# Десктоп: грузим в правую панель %>
              <%= link_to "Подробнее",
                          repair_path(r),
                          data: { turbo_frame: "repair_details" },
                          class: "btn btn-sm btn-outline-primary d-none d-lg-inline-flex" %>

              <%# Мобилка: вручную открываем модалку и грузим фрейм %>
              <%= link_to "Открыть",
                          repair_path(r),
                          data: { repair_open: "1" },
                          class: "btn btn-sm btn-primary d-inline-flex d-lg-none" %>

              <%= link_to "Открыть страницу", r, class: "btn btn-sm btn-outline-dark ms-auto" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
