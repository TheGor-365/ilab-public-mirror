<% provide :page_title, 'Edit Profile' %>
<% currently_at 'Profile' %>

<div class="row">

  <div class="col-2">
    <%= render 'profile_show_nav' %>
  </div>

  <div class="col-6 m-5">

    <div class="row p-5 shadow bg-white mb-5">
      <h1 class="display-6">
        Editing Profile

        <span class="text-muted">
          <%= @user.username %>
        </span>
      </h1>
    </div>

    <%= render partial: 'form', locals: { user: @user } %>

    <div class="list-inline-item mt-3">
      <%= link_to 'Profile', account_path(@user.username), class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'profile_info_card' %>
  </div>
</div>
