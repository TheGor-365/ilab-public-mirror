<%= form_with(model: article, html: { multipart: true }) do |form| %>

  <% if article.errors.any? %>
    <div class="row p-5 shadow bg-white mb-5 border border-danger">
      <div id="error_explanation" class="danger">
        <h5><%= pluralize(article.errors.count, "error") %> <span class="text-muted">prohibited this article from being saved:</span></h5>
        <br>

        <ul>
          <% article.errors.each do |error| %>
            <li>
              <small class="text-muted">
                <%= error.full_message %>
              </small>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :content, class: 'mb-5' %>
    <%= form.rich_text_area :content, class: 'form-control' %>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <div class="mb-3">
      <%= form.label :avatar, class: 'form-label mb-3' %><br>
      <%= form.file_field :avatar, id: 'new-avatar-field', type: 'file', class: 'form-control' %>
      <%= form.hidden_field :avatar_cache %>
    </div>

    <div class="row">
      <div class="mt-3 mb-3 col">
        <%= form.label "Current article avatar", class: 'form-label mb-3' %><br>

        <% if article.avatar.present? %>
          <%= image_tag(article.avatar.url, width: '300', class: 'img-thumbnail') %>
        <% else %>
          <%= image_tag('default_avatar.jpg', width: '300', class: 'img-thumbnail') %>
        <% end %>
      </div>

      <div class="mt-3 mb-3 col">
        <%= form.label "New article avatar preview", class: 'form-label mb-3' %><br>
        <img id="image-preview" src="#" width="300" height="200" class="img-thumbnail" />
      </div>
    </div>
  </div>

  <div class="row p-5 shadow bg-white mb-5">
    <div class="mb-3">
      <%= form.label "Change article images", class: 'form-label mb-3' %><br>
      <%= form.file_field :images, type: 'file', multiple: true, class: 'form-control' %>
      <%= form.hidden_field :images_cache %>
    </div>

    <div class="mt-3 mb-3">
      <% if article.images? %>
        <% article.images.each do |image| %>
          <%= image_tag(image.url, width: '100') %>
        <% end %>
      <% end %>
    </div>

    <div class="mt-3 mb-3 col">
      <%= form.label "Choosed images", class: 'form-label mb-3' %><br>
      <img id="image-preview" src="#" width="300" height="200" class="img-thumbnail" />
    </div>
  </div>

  <% if article.images.size > 0 %>
    <div class="row p-5 shadow bg-white mb-5">
      <%= form.label "Add more images for iphone products", class: 'form-label mb-3' %><br>
      <%= form.file_field :images, multiple: true, class: 'form-control' %>

      <div class="mt-3 mb-3">
        <% if article.images? %>
          <% article.images.each do |image| %>
            <%= image_tag(image.url, width: '100') %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="row p-5 shadow bg-white mb-5">
    <%= form.label "Change article videos", class: 'form-label mb-3' %><br>
    <%= form.file_field :videos, multiple: true, type: 'file', class: 'form-control' %>

    <div class="mt-5">
      <% if article.videos.present? %>
        <%= video_tag(article.videos, width: '340', height: '180', controls: true, class: 'rounded card p-1 shadow mx-auto mb-5') %>
      <% end %>
    </div>
  </div>

  <div class="mt-3 mb-3">
    <%= form.submit class: 'btn btn-success btn-sm' %>
  </div>
<% end %>

<script type="text/javascript">

  function readURL(input) {

    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
        $('#image-preview').attr('src', e.target.result);
      }

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#new-images-field").change(function(){
    readURL(this);
  });

</script>
