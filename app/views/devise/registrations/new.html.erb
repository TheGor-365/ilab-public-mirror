<% provide :page_title, 'Sign Up' %>
<% currently_at 'Sign Up' %>

<div class="sign_up-page pt-3 pb-5">

  <div class="container">
    <div class="row">
      <div class="col-10">
        <div class="p-5 shadow bg-white mt-5">

          <h5 class="mb-5">
            Sign up
          </h5>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3 bg-white shadow mt-5 p-5 col-10">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="mb-3 bg-white shadow mt-5 p-5 col-10">
              <%= f.label :username %>
              <%= f.text_field :username, class: 'form-control' %>
            </div>

            <div class="mb-3 bg-white shadow mt-5 p-5 col-10">

              <%= f.label :your_roles, class: 'mb-3' %>

              <div class="form-check form-switch">
                <%= f.check_box(:repairman, { class: "form-check-input" }, { id: 'repairman' }) %>
                <%= f.label 'Are you repairman', class: "form-check-label text-muted", for: "repairman" %>
              </div>

              <div class="form-check form-switch">
                <%= f.check_box(:teacher, { class: "form-check-input" }, { id: 'teacher' }) %>
                <%= f.label 'Are you teacher', class: "form-check-label text-muted", for: "teacher" %>
              </div>

              <div class="form-check form-switch">
                <%= f.check_box(:student, { class: "form-check-input" }, { id: 'student' }) %>
                <%= f.label 'Are you student', class: "form-check-label text-muted", for: "student" %>
              </div>
            </div>

            <div class="mb-3 bg-white shadow mt-5 p-5 col-10">

              <div class="mb-3">
                <%= f.label :avatar, class: 'form-label mb-3' %><br>
                <%= f.file_field :avatar, type: 'file', class: 'form-control' %>

                <%= f.hidden_field :avatar_cache %>
              </div>

              <div class="mt-3 mb-3">
                <%= image_tag(resource.avatar.url, width: '200') if resource.avatar? %>
              </div>
            </div>

            <div class="mb-3 bg-white shadow mt-5 p-5 col-10">
              <%= f.label :password %>

              <% if @minimum_password_length %>
                <small class="text-muted">
                  (<%= @minimum_password_length %> characters minimum)
                </small>
              <% end %>

              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="mb-3 bg-white shadow mt-5 p-5 col-10">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.submit "Sign up", class: 'btn btn-success btn-sm' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-10">
        <div class="mb-3 bg-white shadow mt-5 p-5">
          <small><%= render "devise/shared/links" %></small>
        </div>
      </div>
    </div>
  </div>
</div>
