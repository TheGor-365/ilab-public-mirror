<% provide :page_title, 'Edit Answer' %>
<% currently_at 'Answers' %>

<div class="row">

  <div class="col-2">
    <%= render 'answer_show_nav' %>
  </div>

  <div class="col-6 m-5">
    <div class="row p-5 shadow bg-white mb-5">
      <h1 class="display-6">
        Editing Answer
        <span class="text-muted">
          <%= @answer.quiz_question_id %>
        </span>

        <span class="text-muted">
          <%= @answer.content %>
        </span>
      </h1>
    </div>

    <%= render 'form', answer: @answer %>

    <div class="list-inline-item mt-3">
      <%= link_to 'Show', @answer, class: 'text-decoration-none' %>
      <%= link_to 'Back', answers_path, class: 'text-decoration-none' %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'answer_info_card' %>
  </div>
</div>
