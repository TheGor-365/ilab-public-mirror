<% provide :page_title, 'Answers' %>
<% currently_at 'Answers' %>

<!-- <div class="container"> -->

  <div class="bg-white shadow p-4 col-12">

    <h4 class="display-3 mb-5">
      Answers
    </h4>

  </div>
<!-- </div> -->

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>id</th>
      <th>Quiz Question</th>
      <th>Content</th>
      <th>Correct</th>
      <th colspan="3">Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td class="align-middle"><%= answer.quiz_question_id %></td>
        <td class="align-middle"><%= answer.content %></td>
        <td class="align-middle"><%= answer.correct %></td>

        <td class="align-middle">
          <% answer.images.each do |image| %>
            <%= image_tag(image.url, width: '30', class: 'rounded') %>
          <% end %>
        </td>

        <td class="align-middle">
          <% answer.videos.each do |video| %>
            <%= video_tag(video.url, width: '40', height: '40', controls: true, class: 'rounded') %>
          <% end %>
        </td>

        <td class="align-middle"><%= link_to 'Show', answer, class: 'text-decoration-none' %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_answer_path(answer), class: 'text-decoration-none' %></td>
        <td class="align-middle"><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path, class: 'text-decoration-none' %>
