<% provide :page_title, @answer.content %>
<% currently_at 'Answers' %>

<div class="row">

  <div class="col-2">
    <%= render 'answer_show_nav' %>
  </div>

  <div class="col-6 m-5">

    <div class="row p-5 shadow bg-white mb-5">
      <span id="question" class="anchorjs-link display-5">
        <span class="text-muted display-5">
          <strong>Quiz Question</strong> <%= @answer.quiz_question_id %>
        </span>
      </span>
    </div>

    <div class="row p-5 shadow bg-white mb-5">
      <span id="answer" class="anchorjs-link display-5">
        <span class="text-muted display-5">
          <%= @answer.content %>
        </span>
      </span>
    </div>

    <div class="row p-5 shadow bg-white mb-5">
      <span id="name" class="anchorjs-link display-5">
        <span class="text-muted display-5">
          <%= @answer.correct %>
        </span>
      </span>
    </div>

    <div class="list-inline-item mt-3">
      <%= link_to 'Edit', edit_answer_path(@answer), class: 'text-decoration-none' %>
      <%= link_to 'Back', answers_path, class: 'text-decoration-none' %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'answer_info_card' %>
  </div>
</div>
